	\fcolorbox{remarkframe}{remark}{
		\parbox{\columnwidth-1.1cm}{
		\vspace{.6em}\hspace{.6em}\parbox{\columnwidth-1.6em}{
		\textbf{Remarks:}\small
		\vspace{-.4em}
		\begin{itemize}
		#1
		\end{itemize}
		}}\hspace*{1cm}}\end{figure}
	\setlength\fboxrule\fboxrulebackup
	}

